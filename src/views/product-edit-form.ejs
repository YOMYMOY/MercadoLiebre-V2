<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%= name %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= price %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%= discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="in-sale" <% category === "in-sale" && "selected" %> >En oferta</option>
							<option value="visited" <% category === "visited" && "selected" %> >Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= description %></textarea>
					</div>
					<div class="col-12 col-md-4 mb-5">
						<label for="principalImage" class="form-label">Imagen Principal:</label>
						<div class="col-12 col-lg-12 pl-0 mb-3">
							<img src="/images/products/<%= image %> " alt="product image" class="product-detail-img ml-0">
						</div>
						<input type="file" id="principalImage" name="image" accept=".jpg, .jpeg, .png">
					</div>
					<div class="col-12 col-md-8 mb-5">
						<label for="secondaryImages" class="form-label">Imágenes Secundarias:</label>
						<div class="d-flex justify-content-start">
						<% images.forEach((image,index) => { %>
							<div class="col-12 col-lg-4 pl-0 mb-3">
								<img src="/images/products/<%= images[index] %> " alt="product image" class="product-detail-img ml-0">
							</div>
						<% }) %>
						</div>
						<input type="file" id="secondaryImages" name="images" class="" multiple accept=".jpg, .jpeg, .png">
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>