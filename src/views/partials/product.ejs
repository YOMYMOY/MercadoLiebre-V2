<div class="col-12 col-sm-6 col-lg-3">				
    <section class="product-box">
        <a href="/products/<%= id %> ">
            <figure class="product-box_image">
                <img src="/images/products/<%= image %> " alt="imagen de producto">
            </figure>
            <article class="product-box_data">
                <% price = price.toString().replace(/\./g,',') %> 
                <% let priceDiscount = (price * ((100-discount)/100)).toFixed(2) %>
                <% priceDiscount = priceDiscount.toString().replace(/\./g,',') %> 
                <% if (discount > 0) { %>
                     <h2>$<%= toThousand(priceDiscount) %> </h2>
                    <span><%= discount %> % OFF</span>
                <% } else { %>
                    <h2>$<%= toThousand(price) %> </h2>
                <% } %>
                
                <p><%= name %> </p>
                <i class="fas fa-truck"></i>
            </article>
        </a>
    </section>				
</div>